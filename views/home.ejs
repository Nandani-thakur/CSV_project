<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>CSV Upload</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body style="background-image: linear-gradient(to top, #d5d4d0 0%, #d5d4d0 1%, #eeeeec 31%, #efeeec 75%, #e9e9e7 100%);height: 100vh;" >

    <!-- home.ejs -->
<div class="container" style="background-color:white;box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;width: 500px;float: left;margin-left: 180px ;padding: 25px;margin-top: 40px;height: 500px;border-radius: 15px;">
<h1>Uploaded Files</h1>

<table>
    <thead>
      <tr>
        <th>Filename</th>
        <th> </th>
        <th> </th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% files.forEach(function(file) { %>
        <tr>
          <td><%= file.filename %></td>
          <td> </td>
          <td> </td>
          <td>
            <a href="/csv/<%= file._id %>">View</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  


</div>
    <div class="container " style="background-color: white;box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;height: 220px;width: 500px;margin-right: 170px;padding: 20px;margin-top: 150px;border-radius: 15px;">
        <h1 class="text-center mb-4">CSV Upload</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="csvFile">Select a CSV file to upload:</label>
                        <input type="file" class="form-control-file" id="csvFile" name="csv" accept=".csv">
                    </div>
                    <button type="submit" class="btn btn-primary" style="background-color: black;box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;">Upload</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>
